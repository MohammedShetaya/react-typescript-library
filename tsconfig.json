{
  "compilerOptions": {
    "target": "es5",
    "module": "ES6",
    "lib": [
      "ES2017",
      "ES7",
      "ES6",
      "DOM"
    ],
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
  },
  "include": [
    "src/**/*",
    "Globals.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx"
  ]
}
